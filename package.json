{
  "name": "@refactoring-do/whatsapp-webhook",
  "version": "1.0.3",
  "description": "WhatsApp Cloud API web hook in a nutshell",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "test": "jest --config jestconfig.json --forceExit",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "keywords": [
    "whatsapp",
    "cloud api",
    "webhook"
  ],
  "repository": {
    "url": "https://github.com/refactoring-do/whatsapp-webhook.git",
    "type": "git",
    "directory": "github/refactoring-do"
  },
  "author": "Refactoring, SRL",
  "license": "MIT",
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.0",
    "@types/node": "^18.15.11",
    "jest": "^29.5.0",
    "prettier": "^2.8.7",
    "ts-jest": "^29.1.0",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^5.0.3"
  },
  "dependencies": {
    "express": "^4.18.2"
  }
}